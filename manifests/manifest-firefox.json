{
  "manifest_version": 2,
  "name": "Card Helper - Auto-Fill Assistant",
  "version": "1.0.0",
  "description": "Professional credit card auto-fill tool with advanced Luhn algorithm and realistic data generation",
  "permissions": [
    "activeTab",
    "storage",
    "https://checkout.stripe.com/*",
    "https://*.cursor.com/*",
    "https://cursor.com/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "scripts": [
      "background_firefox.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Card Helper v1.0.0",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    "public/real-addresses.json",
    "public/bin-database.json"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "card-helper@example.com",
      "strict_min_version": "79.0"
    }
  }
}

